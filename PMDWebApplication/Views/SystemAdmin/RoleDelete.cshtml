@model PMDWebApplication.Models.RoleViewModel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";

}
    <div class="container">

        <h2>Roles in Vervoer</h2>
        <div>
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fas fa-table"></i>
                    <div>
                        <h4>Are you sure you want to delete this role?</h4>
                        <hr />
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.Name)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Name)
                            </dd>

                        </dl>

                        @using (Html.BeginForm("RoleDelete", "SystemAdmin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                <input type="submit" data-confirm="Are you sure?" value="Delete" class="btn btn-default" /> |
                                @Html.ActionLink("Back to List", "RoleIndex")
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
                @section Scripts {

                    <script>
                        jQuery(document).ready(function () {
                            jQuery('[data-confirm]').click(function (e) {
                                if (!confirm(jQuery(this).attr("data-confirm"))) {
                                    e.preventDefault();
                                }
                            });
                        });
                    </script>
                }
