
@{

    {
        ViewBag.Title = "AddAnotherQuestion";
        Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
    }

}
<div class="card mb-3">
    <div class="card-header">
        <div align="center">
            <h3>Would you like to add another question?</h3>
            <br /><br />
            @using (Html.BeginForm("AddNewQuestion", "DualDatabaseTestSchemeTests"))
            {
                <input type="hidden" name="id" value=@ViewBag.id>
                <input type="submit" value="                    Yes                    " />
            }
            <br />
            @using (Html.BeginForm("Index", "DualDatabaseTestSchemeQuestions"))
            {
                <input type="hidden" name="id" value=@ViewBag.id>
                <input type="submit" value="                    No                    " />
            }

        </div>
    </div>
</div>


