@model List<PMDWebApplication.DB.AspNetInsurance>


@{
    ViewBag.Title = "Insurance";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}


<div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            @Html.ActionLink("Insurance", "Insurance")
        </li>
        <li class="breadcrumb-item active">Overview</li>
    </ol>
    <!-- DataTables Example -->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Insurance
            <a href="../Admin/InsuranceAdd" class="btn btn-info pull-right fa fa-plus">Add New</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>No.</th>
                            <th>Product Name</th>
                            <th>Company</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>@(Model.IndexOf(item) + 1)</td>
                                <td>@item.InsuranceName</td>
                                <td>@item.Company</td>
                                <td>
                                    @Html.ActionLink("Edit", "InsuranceEdit", new { InsuranceId = item.InsuranceId })
                                </td>
                                <td>
                                    @using (Html.BeginForm("InsuranceDelete", "Admin", new { InsuranceId = item.InsuranceId }))
                                    {
                                        <input type="submit" , value="Delete" onclick="return confirm('Are you sure you want to delete this Insurance?')" class="btn btn-danger" />
                                    }
                                </td>

                            </tr>

                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>


