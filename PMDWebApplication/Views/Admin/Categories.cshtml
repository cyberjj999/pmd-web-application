@model List<PMDWebApplication.DB.AspNetCategory>
@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            @Html.ActionLink("Categories", "Categories")
        </li>
        <li class="breadcrumb-item active">Overview</li>
    </ol>
    <!-- DataTables Example -->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Category Details
            <a href="../Admin/AddCategory" class="btn btn-info pull-right fa fa-plus">Add New</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>No.</th>
                            <th>Category Name</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                        <tr>
                            <td>@(Model.IndexOf(item) + 1)</td>
                            <td>@item.CategoryName</td>
                            <td>
                                @Html.ActionLink("Edit", "EditCategory", new { categoryId = item.CategoryId })
                            </td>
                            <td>
                                @using (Html.BeginForm("DeleteCategory", "Admin", new { categoryId = item.CategoryId }))
                                {
                                    <input type="submit" , value="Delete" onclick="return confirm('Are you sure you want to delete this product?')" class="btn btn-danger" />
                                }
                            </td>
                        </tr>
                        }

                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>