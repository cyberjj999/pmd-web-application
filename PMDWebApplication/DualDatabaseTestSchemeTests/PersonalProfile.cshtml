@model IEnumerable<PMDWebApplication.DB.DualDatabaseTestSchemeTest>

@{
    
        ViewBag.Title = "PersonalProfile";
        Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
    

}
    <div class="container">
        <ol class="breadcrumb">

            <li class="breadcrumb-item active">Your Tests</li>
        </ol>

        <div class="card mb-3">
            <div class="card-header">


                <div class="card-body">

                    
                    <br />

                    <div class="form-group col-sm-12 col-md-12 col-lg-12">
                        @*<a href="../DualDatabaseTestSchemeTests/CreateAdvanced" class="btn btn-info pull-left fa fa-plus"> Add Test Question</a>*@
                        <div class="btn btn-outline-info pull-left">
                            @Html.ActionLink("Create Simple Test", "Create") <br />
                            @*@Html.ActionLink("Create Advanced Test", "CreateAdvanced")*@
                        </div>
                        @*<div class="form-group col-sm-4 col-md-4 col-lg-4">
                            [Multiple Choice Only] <br />
                            [Additional Options]
                        </div>*@

                    </div>


                    <br />
                    <br />
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Name)
                                        </th>

                                        <th>
                                            @Html.DisplayNameFor(model => model.Status)
                                        </th>

                                        <th>

                                            @Html.DisplayNameFor(model => model.Description)
                                        </th>
                                        @*<th>
                                            @Html.DisplayName("Date")
                                        </th>*@
                                        <th>
                                            Date Created
                                        </th>
                                        <th>Action</th>

                                        <th>Edit Questions in Tests</th>

                                        <th>Edit Tests</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        string username = System.Web.HttpContext.Current.User.Identity.Name;
                                        if (item.Owner == username)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Status)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Description)
                                                </td>
                                                @*<td>
                                                    @Html.DisplayFor(modelItem => item.Genre)
                                                </td>*@
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.DateModified)
                                                </td>
                                                <td>

                                                    @Html.ActionLink("Take Test", "CustomTestPreFormatting", "DualDatabaseTestSchemeQuestions", new { searchid = item.ID },  new { @class = "btn btn-success"})
                                                </td>

                                                <td>

                                                    @Html.ActionLink("Add Question", "AddNewQuestion", new { id = item.ID, },  new { @class = "btn btn-success"}) <br /><br />
                                                    @Html.ActionLink("Edit Questions", "Index", "DualDatabaseTestSchemeQuestions", new { id = item.ID },  new { @class = "btn btn-success"})

                                                </td>
                                                <td>

                                                    @Html.ActionLink("Test Details", "CountQuestionsInTest", "DualDatabaseTestSchemeQuestions", new { id = item.ID },  new { @class = "btn btn-success"}) <br /> <br />
                                                    @Html.ActionLink("Edit Test", "Edit", new { id = item.ID },  new { @class = "btn btn-success"}) <br /> <br />
                                                    @Html.ActionLink("Delete", "Delete", new { id = item.ID },  new { @class = "btn btn-danger"}) 
                                                </td>
                                            </tr>

                                        }

                                    }
                                </tbody>

                            </table>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>